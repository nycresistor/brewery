#!/usr/bin/env python

import zmq
import mraa
import serial
import time
import sys
import random

port = "5560"
context = zmq.Context()
socket = context.socket(zmq.REP)
socket.connect("tcp://localhost:%s" % port)
server_id = random.randrange(1,10005)
ser = serial.Serial('/dev/ttyUSB0', 115200)

while True:
    #  Wait for next request from client
    message = socket.recv()
    celsius = ser.readline()
    celsius = celsius.rstrip()
    try:
        celsius = int(celsius)
    except:
        print "oof : %s" % celsius
    time.sleep (1)  
    socket.send(celsius)

ser.close()
